{
	"$schema": "vscode://schemas/color-theme",
	"name": "SMotaal's Light Blend",
	"type": "light",
	"include": "./base.json",
	"tokenColors": [
		{
			"scope": ["entity", "markup", "variable", "storage", "support", "meta.expression"],
			"settings": {
				"foreground": "#222"
			}
		}
	],
	"colors": {
		// SEE: https://code.visualstudio.com/api/references/theme-color
		"scrollbar.shadow": "#0001",
		"widget.shadow": "#0001",
		"editor.background": "#f9fcff",
		"sideBar.background": "#f9fcff",
		"panel.background": "#f9fcff",
		"tab.activeBackground": "#f9fcff",
		"editorWidget.background": "#f9fcff",
		"activityBar.background": "#2c3e50",
		"editor.foreground": "#222",
		"editorCursor.foreground": "#20292f",
		"dropdown.foreground": "#20292f",
		"button.foreground": "#20292f",
		"editor.selectionForeground": "#fff",
		"foreground": "#20292f",
		"input.background": "#f0f9fff6",
		"checkbox.background": "#f0f9fff6",
		"settings.textInputBackground": "#f0f9fff6",
		"settings.numberInputBackground": "#f0f9fff6",
		"settings.dropdownBackground": "#f0f9fff6",
		"settings.checkboxBackground": "#f0f9fff6",
		"dropdown.background": "#f0f9fff6",
		"dropdown.listBackground": "#f0f9fff6",
		"quickInput.background": "#f0f9fff6"
		// "editorWidget.background": "#f0f9fff6",
		// "contrastBorder": "#fff3",
	}
}
