{
	"$schema": "vscode://schemas/color-theme",
	"include": "./tokens.marks.json",
	"tokenColors": [
		{
			"scope": [
				"punctuation.keyword",
				"punctuation.definition.group.regexp",
				"punctuation.definition.character-class.regexp",
				"storage.type.function.arrow",
				"keyword.operator.assignment",
				"support.function.git-rebase"
			],
			"settings": {
				"foreground": "#3069cc"
			}
		},
		{
			"scope": [
				"punctuation.definition.block.tag",
				"storage.type.class",
				"constant.regexp",
				"entity.name.section",
				"meta.structure.dictionary.key.python"
			],
			"settings": {
				"foreground": "#3366a6"
			}
		},
		{
			"scope": [
				"keyword",
				"storage.modifier",
				"keyword.control",
				"storage.type",
				"support.type.property-name.json",
				"punctuation.support.type.property-name",
				"entity.name.tag"
			],
			"settings": {
				"foreground": "#d97000"
			}
		},
		{
			"scope": [
				"entity.name.selector",
				// "entity.other.attribute-name",
				"punctuation.definition.template-expression.begin",
				"punctuation.definition.template-expression.end"
			],
			"settings": {
				"foreground": "#f09000"
			}
		},
		{
			"scope": [
				"string",
				"punctuation.definition.string.begin",
				"punctuation.definition.string.end",
				"markup.inline.raw",
				"keyword.other.unit",
				"meta.structure.dictionary.value",
				"meta.structure.dictionary",
				"meta.structure.array"
			],
			"settings": {
				"foreground": "#009696"
			}
		},
		{
			"scope": [
				"keyword.operator",
				"storage.type.function.arrow",
				"string.regexp punctuation.definition.string.begin",
				"string.regexp punctuation.definition.string.end"
			],
			"settings": {
				// "fontStyle": "bold"
			}
		},
		{
			"scope": [
				"constant.numeric"
				// "string.regexp",
				// "string.regexp punctuation.definition.string.begin",
				// "string.regexp punctuation.definition.string.end"
			],
			"settings": {
				"foreground": "#996699"
			}
		},

		{
			"scope": ["entity", "markup", "variable", "storage", "source", "support", "meta.expression"],
			"settings": {} /* reset */
		},
		{
			"scope": ["entity.name.variable"],
			"settings": {
				"foreground": "#969696"
			}
		},
		{
			"scope": ["keyword.operator", "punctuation"],
			"settings": {
				"foreground": "#33cc33"
			}
		},
		{
			"scope": [],
			"settings": {
				"foreground": "#6666cc"
			}
		},
		{
			"scope": [
				"meta.brace",
				"punctuation.section",
				"punctuation.definition",
				"punctuation.definition.tag.begin",
				"punctuation.definition.tag.end",
				"punctuation.definition.array.begin",
				"punctuation.definition.array.end",
				"punctuation.definition.dictionary.begin",
				"punctuation.definition.dictionary.end",
				"punctuation.definition.function.body.begin",
				"punctuation.definition.function.body.end",
				"constant.sha.git-rebase"
			],
			"settings": {
				"foreground": "#e0b040"
			}
		},
		{
			"scope": [
				"constant.language",
				"variable.language",
				"punctuation.definition.tag",
				"keyword.operator.new",
				"keyword.operator.expression",
				"keyword.operator.cast",
				"keyword.operator.sizeof",
				// "keyword.operator.logical.python",
				"punctuation.section.embedded.begin.metatag.php",
				"punctuation.section.embedded.end.metatag.php"
			],
			"settings": {
				"foreground": "#cc3333"
			}
		}
	]
}
