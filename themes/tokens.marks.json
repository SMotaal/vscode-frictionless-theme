{
	"$schema": "vscode://schemas/color-theme",
	"include": "./tokens.hints.json",
	"tokenColors": [
		// SEE: README.md
		{
			"scope": ["comment", "punctuation.definition.comment"],
			"settings": {
				"foreground": "#999e"
			}
		},
		{
			"scope": "invalid",
			"settings": {
				"foreground": "#d55"
			}
		},
		{
			"scope": "markup.inserted",
			"settings": {
				"foreground": "#7c1"
			}
		},
		{
			"scope": "markup.deleted",
			"settings": {
				"foreground": "#e22"
			}
		},
		{
			"scope": "markup.changed",
			"settings": {
				"foreground": "#36a"
			}
		},
		{
			"scope": "token.info-token",
			"settings": {
				"foreground": "#36f"
			}
		},
		{
			"scope": "token.warn-token",
			"settings": {
				"foreground": "#c93"
			}
		},
		{
			"scope": "token.error-token",
			"settings": {
				"foreground": "#c33"
			}
		},
		{
			"scope": "token.debug-token",
			"settings": {
				"foreground": "#c0c"
			}
		}
	]
}
